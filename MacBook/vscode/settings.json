{
  //Terminal
  "terminal.integrated.fontFamily": "Fira Mono for Powerline",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.tabs.description": "${task}${separator}${local}${separator}${cwdFolder}${separator}${process}",
  // Editor settings
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.scrollBeyondLastLine": false,
  "editor.suggestSelection": "first",
  "editor.scrollBeyondLastColumn": 2,
  "editor.accessibilitySupport": "off",
  // ESLint for code quality - Prettier for formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.probe": ["javascript", "javascriptreact", "vue"],
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.eslint"],
  // "vetur.validation.template": false,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  // Toggle sidebar & activity bar (install multi-command ext)
  "multiCommand.commands": [
    {
      "command": "multiCommand.makeRoom",
      "sequence": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.action.toggleActivityBarVisibility"
      ]
    }
  ],
  // Show/hide files in file tree
  "files.exclude": {
    "**/.cache": true,
    "**/.DS_Store": true,
    "**/.git": false,
    "**/.hg": true,
    "**/.next": false,
    "**/.svn": true,
    "**/CVS": true,
    "**/dist": false
  },
  // Workbench & Themes
  "workbench.colorTheme": "Community Material Theme Palenight High Contrast",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.productIconTheme": "fluent-icons",
  // VSIntellicode Settings
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  //Settings Sync GitHub Gist
  "sync.gist": "231e64a001dde0a0ffdd77052bd4e228",
  // Deprecation Notices
  "bracket-pair-colorizer-2.depreciation-notice": false,
  // Saved Words in User Directory
  "cSpell.userWords": [
    "Dotfiles",
    "downloadjs",
    "elysianwebdesign",
    "keychain",
    "Luzquinos",
    "mkdir",
    "pbcopy",
    "vueify",
    "vuex"
  ],
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "workbench.startupEditor": "none",
  "security.workspace.trust.untrustedFiles": "open"
}
